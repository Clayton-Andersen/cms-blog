<article class="post">
  <div class="title">
    <p>{{title}}</p>
  </div>
  <div>
    <p>{{body}}</p>
  </div>
  <div class="meta">
    by {{user.username}} on {{format_date createdAt}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>